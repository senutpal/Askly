{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "embed.ts",
    "vite.config.ts",
    "vite-end.d.ts",
    "*.ts",
    "**/*.ts",

  ],
  "exclude": ["node_modules"]
}
